{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1 class="h3">Commande #{{ order.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Créée le</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ order.totalAmount }} Ar</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ order.orderItems|length }}</td>
            </tr>
            <tr>
                <th>Payée le</th>
                <td>{{ order.bankedAt ? order.bankedAt|date('Y-m-d H:i:s') : '-' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end w-100">
        <a class="btn btn-secondary px-5 rounded-pill" href="{{ path('app_order_edit', {'id': order.id}) }}">Modifier</a>
        {{ include('order/_delete_form.html.twig') }}
    </div>

    <div>
        <a class="btn btn-primary my-3 px-5 rounded-pill" href="{{ path('app_order_index') }}">Retour à la liste</a>
    </div>

{% endblock %}
